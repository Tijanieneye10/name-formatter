{
    "name": "tijanieneye10/name-formatter",
    "description": "Play around",
    "keywords": [
        "Tijanieneye10",
        "name-formatter"
    ],
    "homepage": "https://github.com/tijanieneye10/name-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Tijani Eneye Usman",
            "email": "brainyworld10@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Tijanieneye10\\Playground\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tijanieneye10\\Playground\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
