{
    "name": "tijanieneye10/name-formatter",
    "description": "A simple and lightweight PHP package for formatting and extracting information from full names. Perfect for applications that need to handle user names, display initials, or format names consistently",
    "keywords": [
        "Tijanieneye10",
        "name-formatter"
    ],
    "homepage": "https://github.com/tijanieneye10/name-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Tijani Eneye Usman",
            "email": "brainyworld10@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Tijanieneye10\\NameFormatter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tijanieneye10\\NameFormatter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
